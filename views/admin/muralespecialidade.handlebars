<div class="bodyLogin">

  <h2 class="text-center mt-4 ">Médicos da Clínica</h2>

  <div class="container-fluid barraBusca">


    <div class="navBtn">

      <div class="mb-4">
        <form action="/admin/especialidades/pesquisarEspecialidade" method="POST">
          <input class="" type="text" name="pesquisa" placeholder="Nome da Especialidade">
          <button class="btn btn-outline" type="submit">Pesquisar</button>
        </form>
      </div>

      <div class="mb-4 navBtn2">

        <div class="">
          <a href="/admin/especialidades/add"><button class="btn btn-outline">Cadastrar Especialidade</button></a>
        </div>

        <div class="">
          <a href="/admin/medicos"><button class="btn btn-outline">Lista de Médicos</button></a>
        </div>

      </div>



    </div>
  </div>
  <hr>

  {{#each especialidades}}

  <div>
    <div class="card my-4">
      <div class="card-body">
        <p class="text-md-start text-center textoPrincipal">{{nome}}</p>
        {{!-- <p class="mt-3">Descrição</p> --}}
        <p class="mt-3 textoDescricao">{{descricao}}</p>

        <div class="d-flex flex-wrap justify-content-md-start justify-content-center">
          
          <a href="/admin/especialidade/edit/{{_id}}"><button
              class="btn btn-outline-warning my-3 mx-1 ">Editar</button></a>
          
          <form action="/admin/especialidade/delete" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button class="btn btn-outline-danger my-3 mx-1">Excluir</button>
          </form>

        </div>
      </div>
    </div>

    {{else}}

    <p class="mt-3">Nenhuma Especialidade registrada</p>

    {{/each}}

  </div>
</div>